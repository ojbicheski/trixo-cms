<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
	<navigation-rule>
		<from-view-id>/painelPagina.xhtml</from-view-id>
		<!-- Conteudo: Texto Curto -->
		<navigation-case>
			<from-action>#{textoCurtoEntity.newEntity}</from-action>
			<from-outcome>new</from-outcome>
			<to-view-id>/formularioTextoCurto.xhtml</to-view-id>
		</navigation-case>
		<!-- Conteudo: Texto Longo -->
		<navigation-case>
			<from-action>#{textoLongoEntity.newEntity}</from-action>
			<from-outcome>new</from-outcome>
			<to-view-id>/formularioTextoLongo.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
